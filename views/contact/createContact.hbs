
<h2>New Contact</h2>

<form class="row gy-2 gx-3 align-items-center" action="/contact/create" method="POST">
  <div class="col-auto">
    <label class="visually-hidden" for="autoSizingInput">Name</label>
    <input type="text" class="form-control" id="autoSizingInput" placeholder="Jane" name="name">
  </div>
  <div class="col-auto">
    <label class="visually-hidden" for="autoSizingSelect">Preference</label>
    <select class="form-select" id="autoSizingSelect" name="category">
      <option selected>Category...</option>
      <option value="Family">Family</option>
       <option value="Friends">Friends</option>
      <option value="Pets">Pets</option>
      <option value="Other">Other</option>
    </select>
  </div>
  
  <div class="col-auto">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

