
<div>
    
    <h2>Log In</h2>

    <form action="/auth/login" method="POST">
        <h2>Username</h2>
        <input 
            type="username"
            name="username"
            placeholder="username92"
        />


        <h2>Password</h2>
        <input 
            type="password"
            name="password"
            placeholder="helloworld"
        />

        <button type="submit">
           Log In
        </button>

        {{#if errorMessage}}
            <p style="color: red">{{errorMessage}}</p>
        {{/if}}

     <button type="submit">
           Sign Up
        </button>
    </form>


</div>